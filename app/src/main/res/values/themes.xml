<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Eats" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_500</item>
        <item name="colorPrimaryVariant">@color/red_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_200</item>
        <item name="colorSecondaryVariant">@color/blue_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- shape -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Eats.Large.Rounded</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Eats.Large.Rounded</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Eats.Large.Rounded</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- animation  -->
        <item name="android:windowContentTransitions">true</item>

        <!-- navigation Bar en la parte inferior-->
        <!--        <item name="android:navigationBarColor">?attr/primaryColor</item>-->
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>

        <!-- transition -->
<!--        <item name="android:windowEnterTransition">@transition/activity_slide</item>-->
<!--        <item name="android:windowExitTransition">@transition/activity_slide</item>-->

        <!-- specify shared element transitions -->
<!--        <item name="android:windowSharedElementEnterTransition">@transition/changebounds</item>-->
<!--        <item name="android:windowSharedElementExitTransition">@transition/changebounds</item>-->

        <!-- Customize your theme here. -->
        <item name="colorDotProgress">@color/blue_500</item>
        <item name="colorTheme">@color/white</item>
        <item name="colorTextTheme">@color/black</item>


    </style>


    <style name="splash" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="android:statusBarColor">@color/red_200</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowTranslucentStatus">false</item>

        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:navigationBarColor">@color/red_200</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
    </style>


    <!-- custom TextInputLayout-->

    <style name="customEditTextOutline" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginEnd">18dp</item>
        <item name="android:layout_marginStart">18dp</item>
    </style>

    <style name="customEditTextFilled" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_marginEnd">18dp</item>
        <item name="android:layout_marginStart">18dp</item>
    </style>

    <style name="customBtn" >
        <item name="android:layout_marginEnd">18dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginStart">18dp</item>
    </style>

    <style name="customEditTextOutlineDropdown" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_marginEnd">18dp</item>
        <item name="android:layout_marginStart">18dp</item>
    </style>

    <!-- FullScreenDialog -->

    <style name="AppThemeDialogCustom" parent="Theme.AppCompat.Light.DialogWhenLarge">
        <item name="android:windowNoTitle">true</item>
        <item name="android:dialogCornerRadius" tools:targetApi="p">10dp</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>


    <style name="cornerDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:dialogCornerRadius" tools:targetApi="p">@dimen/max_cornerDialog</item>
        <item name="android:windowMinWidthMajor">@dimen/max_width</item>
        <item name="android:windowMinWidthMinor">@dimen/min_width</item>
    </style>

    <style name="Widget.Button.OutlinedButton.Icon" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="Camera" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ThemeOverlay.Catalog.MaterialCalendar.Custom" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <!--        <item name="colorPrimary">?attr/colorAccent</item>-->
        <item name="colorOnPrimary">@color/white</item>
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <!--        <item name="android:textColor">?attr/colorLight</item>-->
        <!--        <item name="android:tint">?attr/colorAccent</item>-->
    </style>

</resources>